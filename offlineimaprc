[general]
accounts = Gmail,UniMR
maxsyncaccounts = 2

[Account Gmail]
localrepository = GmailLocal
remoterepository = GmailRemote
status_backend = sqlite

[Repository GmailLocal]
type = Maildir
localfolders = ~/Documents/Mail/Gmail
nametrans = lambda folder: '[Google Mail]/' + folder if folder in ['Chats', 'Important', 'Starred', 'Sent Mail', 'Bin', 'Drafts', 'Spam', 'All Mail'] else folder

[Repository GmailRemote]
type = Gmail
remoteuser = stefan.fehrenbach
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
realdelete = no
nametrans = lambda folder: re.sub('\[Google Mail\]/', '', folder)

[Account UniMR]
localrepository = UniMRLocal
remoterepository = UniMRRemote
status_backend = sqlite

[Repository UniMRLocal]
type = Maildir
localfolders = ~/Documents/Mail/UniMR

[Repository UniMRRemote]
type = IMAP
remotehost = imap.mathematik.uni-marburg.de
remoteuser = fehrenbach
ssl = yes
cert_fingerprint = 8220d597887d7dd8830c0cceb4ba80f31fba09ee
realdelete = no
